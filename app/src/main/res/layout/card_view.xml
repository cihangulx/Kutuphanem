<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout

            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/kitap_ismi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitap İsmi" />

            <ImageView

                android:layout_below="@+id/kitap_yazari"
                android:id="@+id/kitap_resmi"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@color/colorAccent" />

            <TextView
                android:id="@+id/kitap_yayinevi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yayınevi"
                android:layout_below="@+id/kitap_resmi"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/kitap_basim_yili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"
                android:layout_marginRight="14dp"
                android:layout_below="@+id/kitap_resmi"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:textSize="15sp"
                android:textAlignment="center"
                android:id="@+id/kitap_yazari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitap Yazari"
                android:layout_below="@+id/kitap_ismi"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>